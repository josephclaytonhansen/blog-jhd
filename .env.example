# Copy this file to .env and fill in your actual values

# Database Configuration
# MongoDB connection string format: mongodb://username:password@host:port/database?authSource=admin
MONGO_STRING=mongodb://admin:your_secure_mongo_password@mongodb:27017/blog?authSource=admin

# These are used by Docker Compose to set up the MongoDB container
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password
MONGO_DB=blog

# Application Configuration
NODE_ENV=production
BACKEND_PORT=3720
JWT_SECRET=your_jwt_secret_here
COOKIE_PARSER_SECRET=your_cookie_secret_here

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token

# Email Configuration
EMAIL_FROM_USERNAME=your_email@domain.com
EMAIL_FROM_PASSWORD=your_email_password

# URLs
FRONTEND_URLS=https://yourdomain.com,https://api.yourdomain.com
VUE_APP_SERVER_URL=https://api.yourdomain.com

# SSL Certificate paths (for production with nginx)
SSL_CERT_PATH=./nginx/ssl/cert.pem
SSL_KEY_PATH=./nginx/ssl/key.pem